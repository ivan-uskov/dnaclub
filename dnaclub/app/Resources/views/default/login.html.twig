{% extends 'empty_layout.html.twig' %}
{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Авторизируйтесь</h3>
          </div>
          <div class="panel-body">
            {% if error %}
              <div class="error">{{ error.message }}</div>
            {% endif %}
            <form role="form" action="{{ path('_security_check') }}" method="post">
              <fieldset>
                <div class="form-group">
                  <input class="form-control" placeholder="E-mail" name="_username" type="text" autofocus="" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="Пароль" name="_password" type="password" value="" />
                </div>
                <input type="submit" name="login" class="btn btn-lg btn-success btn-block" value="Зайти" />
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}