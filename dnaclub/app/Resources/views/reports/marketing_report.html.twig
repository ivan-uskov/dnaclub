{% extends 'layout.html.twig' %}
{% block pageH1 %}Маркетинговый отчет{% endblock %}
{% block content %}
  <div class="row">
    <div class="col-md-6">
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(form) }}
      {{ form_widget(form.months, {'attr': {'class': 'monthSelect', 'onchange': "this.form.submit()"}}) }}
    {{ form_end(form) }}
    </div>
    <div class="col-md-6 text-right">
    {% form_theme updateReportForm 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(updateReportForm) }}
      {{ form_widget(updateReportForm.update) }}
    {{ form_end(updateReportForm) }}
    </div>
  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="marketing_report">
        <thead>
        <tr>
          <th>Фио клиента</th>
          <th>Остаток на начало месяца</th>
          <th>Сумма покупок</th>
          <th>Сумма к реализации</th>
          <th>Контракты</th>
          <th>Лидерские</th>
          <th>Остаток на конец месяца</th>
        </tr>
        </thead>
        <tbody>
        {% for reportRow in reportRows %}
          <tr>
            <td>
              <a href="{{ path('editClient', {'clientId': reportRow.getClient().getClientId()}) }}">
                {{ reportRow.getClient().getFullName() }}
              </a>
            </td>
            <td class="text-right">{{ reportRow.getStartSum()|localizedcurrency('RUB') }}</td>
            <td class="text-right">{{ reportRow.getOrderSum()|localizedcurrency('RUB') }}</td>
            <td class="text-right">{{ (reportRow.getStartSum() + reportRow.getOrderSum())|localizedcurrency('RUB') }}</td>
            <td class="text-right">{{ reportRow.getContract() }}</td>
            <td class="text-right">{{ reportRow.getMaintenance() }}</td>
            <td class="text-right">{{ (reportRow.getStartSum() + reportRow.getOrderSum() - reportRow.getContractSum() - reportRow.getMaintenanceSum)|localizedcurrency('RUB') }}</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('css/common/forms_common.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/data-table/sorting-formatted-number.js') }}"></script>
  <script>
    $(document).ready(function() {
      $('#marketing_report').DataTable({
        pageLength: 25,
        order: [[0, "asc"]],
        columnDefs: [
          {searchable: false, targets: [1, 2, 3, 4, 5, 6]},
          {type: 'formatted-num', targets: [1, 2, 3, 6]}
        ]
      });
    } );
  </script>
{% endblock %}
