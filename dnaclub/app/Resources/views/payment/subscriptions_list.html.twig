{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block pageH1 %}Лидерские и контракты{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('bundles/app/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block content %}
  <div class="panel-body">
    {{ form_start(form) }}
      <div class="row">
        <div class="col-md-6">
          {{ form_row(form.client) }}
          {{ form_row(form.type) }}
          {{ form_row(form.count)  }}
          {{ form_row(form.date) }}
          {{ form_row(form.save) }}
        </div>
      </div>
    {{ form_end(form) }}
  </div>
  <div class="panel-body">
    {{ form_start(searchForm) }}
      {{ form_widget(searchForm.months, {'attr': {'style': 'width:200px; margin-bottom: 10px;', 'onchange': "this.form.submit()"}}) }}
    {{ form_end(searchForm) }}

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="subscription_list">
        <thead>
        <tr>
          <th>Фио клиента</th>
          <th>Дата</th>
          <th>Тип подписки</th>
          <th>Количество</th>
          <th>Сумма</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        {% for subscription in subscriptions %}
          <tr>
            <td>{{ subscription.getClient().getLastName() }} {{ subscription.getClient().getFirstName() }} {{ subscription.getClient().getMiddleName() }}</td>
            <td>{{ subscription.getDate()|localizeddate('long', 'none', null, null, 'dd LLLL yyyy') }}</td>
            <td>{{ subscription.getTypeName() }}</td>
            <td class="text-right">{{ subscription.getCount() }}</td>
            <td class="text-right">{{ subscription.getSum()|localizedcurrency('RUB') }}</td>
            <td><a href="{{ path('deleteSubscription', {'subscriptionId': subscription.getSubscriptionId()}) }}" class="glyphicon glyphicon-remove" onclick="return confirm('Вы уверены, что хотите удалить запись?')"></a></td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/app/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
  <script src="{{ asset('bundles/app/plugins/bootstrap-datepicker/dist/locales/bootstrap-datepicker.ru.min.js') }}"></script>

  <script>
    $('.datepicker').datepicker({
    format: 'dd-mm-yyyy',
    weekStart: 1,
    autoclose: true,
    language: 'ru'
    });
  </script>

  <script>
    $(document).ready(function() {
      $('#subscription_list').DataTable({
        pageLength: 25
      });
    });
  </script>
{% endblock %}
