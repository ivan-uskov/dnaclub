{% extends 'layout.html.twig' %}
{% block pageH1 %}Список продаж{% endblock %}
{% block content %}
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover" id="ordersList">
        <thead>
          <tr>
            <th>Фио клиента</th>
            <th width="200">Товары</th>
            <th>Дата</th>
            <th>Статус</th>
            <th>Стоимость</th>
            <th>Оплачено наличными</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for orderInfo in orders %}
            <tr onclick="location.href = '{{ path('editOrder', {'orderId': orderInfo['order'].getOrderId()}) }}'">
              <td>
                <a href="{{ path('editClient', {'clientId': orderInfo['order'].getClient().getClientId()}) }}">
                  {{ orderInfo['order'].getClient().getFullName() }}
                </a>
              <td>
                {% for orderItem in orderInfo['orderItems'] %}
                  {{ orderItem.getProduct().getName() }}<span class="right_float">{{ orderItem.getCount() }} {{ orderItem.getProduct().getPieceName() }}</span><br />
                {% endfor %}
              </td>
              <td>{{ orderInfo['order'].getCreatedAt()|date('d.m.Y') }}</td>
              <td>{{ orderInfo['order'].getStatus() }}</td>
              <td class="right_text_align">{{ orderInfo['order'].getSum()|localizedcurrency('RUB') }}</td>
              <td class="right_text_align">{{ orderInfo['payment'].getSum()|localizedcurrency('RUB') }}</td>
              <td><a href="{{ path('deleteOrder', {'orderId': orderInfo['order'].getOrderId()}) }}" class="glyphicon glyphicon-remove remove_order_button"></a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <a class="btn btn-default btn-lg btn-block" target="_blank" href="{{ path('createOrder') }}">Добавить продажу</a>
{% endblock %}
{% block javascripts %}
  <script src="{{ asset('js/data-table/sorting-date-ru.js') }}"></script>
  <script src="{{ asset('js/data-table/sorting-formatted-number.js') }}"></script>
  <script src="{{ asset('js/orders/OrdersListPage.js') }}"></script>
{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('css/orders/manage.css') }}" />
{% endblock %}