{% extends 'layout.html.twig' %}
{% block pageH1 %}Добавление продажи{% endblock %}
{% block content %}
  <form action="{{ path('createOrderAjax') }}" method="post" id="createOrderForm">
    <div class="form-group">
      <label for="userName">ФИО</label>
      <select id="userName" name="user_name" class="form-control">
        {% for client in clients %}
          <option value="{{ client.getClientId() }}">{{ client.getName() }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group">
      <label for="products">Товары - общая стоимость <span id="coast">0</span> руб.</label>
      {% include 'include/product/selection_block.html.twig' with {'id': 'productsSelection', 'products': products, 'selectedProducts': []} %}
    </div>
    <div class="form-group">
      <label for="discount">Скидка</label>
      <input class="form-control" type="text" name="discount" id="discount" />
    </div>
    <div class="form-group">
      <label for="paidByCash">Оплачено налиными</label>
      <input class="form-control" type="text" name="paidByCash" id="paidByCash" />
    </div>
    <div class="form-group">
      <div class="form-group">
      <label for="paidByReward">Оплачено вознаграждением</label>
      <button type="reset" class="btn btn-default">Добавить оплату вознаграждением</button>
      </div>
      <textarea id="paidByCash" name="paidByReward" class="form-control" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="debt">Долг</label>
      <input class="form-control" type="text" name="debt" id="debt" readonly />
    </div>
    <input type="hidden" id="product_ids" name="productIds" value="" />
    <button type="submit" id="submit" class="btn btn-default">Добавить</button>
  </form>
{% endblock %}
{% block javascripts %}
  <script src="/js/lib/bootstrap.typeahead.js"></script>
  <script src="/js/ui-kit/ProductSelectionBlock.class.js"></script>
  <script src="/js/orders/CreateOrderPage.js"></script>
{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="/css/orders/manage.css" />
  <link rel="stylesheet" type="text/css" href="/css/ui-kit/product_selection_block.css" />
{% endblock %}