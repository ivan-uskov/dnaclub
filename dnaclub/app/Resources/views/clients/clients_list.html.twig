{% extends 'layout.html.twig' %}
{% block pageH1 %}Список клиентов{% endblock %}
{% block content %}
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>ФИО</th>
                    <th>Город</th>
                    <th>E-mail</th>
                    <th>Последняя покупка</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.getClientId() }}</td>
                        <td>{{ client.getLastName() }} {{ client.getFirstName() }} {{ client.getMiddleName() }}</td>
                        <td>{{ client.getCity() }}</td>
                        <td>{{ client.getEmail() }}</td>
                        <td>{{ client.getLastOrderDateStr() }}</td>
                        <td><a href="javascript:void(0);" class="glyphicon glyphicon-remove"></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <a class="btn btn-default btn-lg btn-block" target="_blank" href="{{ path('createClient') }}">Добавить клиента</a>
{% endblock %}