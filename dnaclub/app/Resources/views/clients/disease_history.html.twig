{% extends 'layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block pageH1 %}
    История болезни - {{ client.getFullName() }}
{% endblock %}
{% block content %}
    <h3>
        <a href="{{ path('editClient', {'clientId': client.getClientId()}) }}">Перейти к карточке клиента</a>
    </h3>
    <form action="" method="post">
        <div class="form-group">
            <label for="date">Дата</label>
            <input class="form-control{% if isNew %} datepicker{% endif %}" type="text" name="date" id="date"
                   {% if isNew %}
                       value="{{ 'now'|date("d.m.Y") }}"
                   {% else %}
                       disabled="disabled"
                       value="{{ currentDiseaseHistory.getDate().format("d.m.Y") }}"
                   {% endif %}
            />
        </div>
        <div class="form-group">
            <label for="healthState">Состояние здоровья</label>
            <textarea class="form-control" name="health_state" id="healthState" rows="3">{%
                if not isNew
                    %}{{ currentDiseaseHistory.getHealthState() }}{%
                endif
            %}</textarea>
        </div>
        <div class="form-group">
            <label for="treatment">Курс</label>
            <textarea class="form-control" name="treatment" id="treatment" rows="3">{%
                if not isNew
                    %}{{ currentDiseaseHistory.getTreatment() }}{%
                endif
            %}</textarea>
        </div>
        <button type="submit" id="submit" class="btn btn-default">
            {% if isNew%}
                Добавить
            {% else %}
                Сохранить
            {% endif %}
        </button>
    </form>

    <table class="table table-hover" id="disease_histories_list">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Состояние здоровья</th>
                <th>Курс</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for diseaseHistory in diseaseHistories %}
                <tr>
                    <td>{{ diseaseHistory.getDate().format("Y-m-d H:i:s") }}</td>
                    <td>{{ diseaseHistory.getHealthState() }}</td>
                    <td>{{ diseaseHistory.getTreatment() }}</td>
                    <td><a href="{{ path('editDiseaseHistory', {'clientId': diseaseHistory.getClient().getClientId(), 'diseaseHistoryId': diseaseHistory.getDiseaseHistoryId()}) }}" class="glyphicon glyphicon-edit"></a></td>
                    <td><a href="{{ path('deleteDiseaseHistory', {'diseaseHistoryId': diseaseHistory.getDiseaseHistoryId()}) }}" class="glyphicon glyphicon-remove delete-link"></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if not isNew %}
        <a class="btn btn-default btn-lg btn-block" href="{{ path('diseaseHistory', {'clientId': currentDiseaseHistory.getClient().getClientId()}) }}">Добавить запись</a>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('bundles/app/plugins/bootstrap-datepicker/dist/locales/bootstrap-datepicker.ru.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/disease_history.js') }}"></script>
{% endblock %}