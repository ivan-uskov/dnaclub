{% extends 'layout.html.twig' %}
{% block pageH1 %}Редактирование товара{% endblock %}
{% block content %}
    <div class="panel-body">
        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-8 col-sm-12">
                {{ form_row(form.name) }}
                {{ form_row(form.price) }}
                {{ form_row(form.pieceName) }}
                {{ form_row(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}